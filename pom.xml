    </dependency>
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-mllib_2.12</artifactId>
      <version>3.4.0</version>
      <scope>provided</scope>
    </dependency>
    <!-- Configuration lib -->
    <dependency>
      <groupId>com.typesafe</groupId>
      <artifactId>config</artifactId>
